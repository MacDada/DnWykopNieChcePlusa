{
	"name": "WykopNieChcePlusa",
	"version": "0.8",
	"manifest_version": 2,
	"description": "Ukrywaj plusy od niechcianych os√≥b na Mikroblogu Wykop.pl",
    "homepage_url": "https://github.com/MacDada",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
	"content_scripts": [
		{
			"matches": [
				"http://www.wykop.pl/*",
                "https://www.wykop.pl/*"
			],
			"js": [
                "jquery-2.0.3.min.js",
                "userscript.js"
            ]
		}
	],
    "page_action": {
        "default_title": "WykopNieChcePlusa",
        "default_icon": {
            "19": "icon48.png",
            "38": "icon48.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://www.wykop.pl/"
    ]
}